{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "svojak-party",
    "version": "0.1.4"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": {
          "allow": [
            "**",
            "**/\\.*"
          ]
        }
      },
      "protocol": {
        "assetScope": [
          "**",
          "**/\\.*"
        ],
        "all": true,
        "asset": true
      },
      "http": {
        "all": true,
        "scope": ["http://localhost:8888"]
      }
    },
    "windows": [
      {
        "title": "Svojak party",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src * data: blob: 'unsafe-inline' 'unsafe-eval';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.halavich.svojak-party",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
